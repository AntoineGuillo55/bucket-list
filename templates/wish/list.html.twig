{% extends 'base.html.twig' %}

{% block body %}
    {% if app.user %}
        <h2>Bienvenue sur ta bucket list {{ app.user.pseudo }} !</h2>
    {% else %}
        <h2>Ma bucket list !</h2>
    {% endif %}
    <section>
        {% for wish in wishes %}
            <a href="{{ path('wish_detail', {'id': wish.id}) }}">
                <div>{{ wish.title }} [{{ wish.category.name }}]</div>
            </a>
        {% endfor %}
    </section>
{% endblock %}

{% block title %}
    {{ parent() }} | list
{% endblock %}

